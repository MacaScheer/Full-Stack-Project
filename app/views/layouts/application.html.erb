<!DOCTYPE html>
<html>
  <head>
    <title>fotobox</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Lobster|Roboto|Satisfy|Source+Sans+Pro|Yellowtail&display=swap" rel="stylesheet">
    <%= favicon_link_tag asset_path('lightmeter.png') %>
    <% if logged_in? %>
      <script type="text/javascript">
        window.currentUser = <%= render("api/users/user.json.jbuilder", user: current_user).html_safe %>
      </script>
    <% end %>
    <%= stylesheet_link_tag 'application', media: "all"%>
    
    <%= javascript_include_tag 'application'%>
  </head>

  <body>
    <%= yield %>
  </body>
</html>

